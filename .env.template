# Environment Variables Template for Trading Algorithm
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Alpaca API Credentials
# =============================================================================
# Get these from your Alpaca account at https://alpaca.markets/
ALPACA_PAPER_KEY=your_paper_trading_api_key_here
ALPACA_PAPER_SECRET=your_paper_trading_secret_key_here

# Live trading credentials (optional - only needed for live trading)
ALPACA_LIVE_KEY=your_live_trading_api_key_here
ALPACA_LIVE_SECRET=your_live_trading_secret_key_here

# =============================================================================
# OPTIONAL: Google Cloud Storage (for data persistence)
# =============================================================================
# Path to your Google Cloud service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json
GCS_BUCKET_NAME=your-trading-algo-bucket

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Use paper trading (True) or live trading (False)
PAPER_TRADE=True

# Portfolio management
MAX_POSITIONS=10
MAX_NEW_POSITIONS=2
POSITION_SIZE_PCT=0.1
MIN_CASH_PCT=0.1

# Risk management
STOP_LOSS_PCT=0.05
TAKE_PROFIT_PCT=0.15
MAX_HOLD_DAYS=30

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================
BACKTEST_INIT_CASH=10000
BACKTEST_MONTHS=6

# RSI Optimization Ranges
RSI_PERIOD_START=3
RSI_PERIOD_STOP=34
RSI_PERIOD_STEP=10

RSI_LOWER_START=20
RSI_LOWER_STOP=41
RSI_LOWER_STEP=5

RSI_UPPER_START=60
RSI_UPPER_STOP=85
RSI_UPPER_STEP=5

# =============================================================================
# DATA FILTERING
# =============================================================================
MIN_VOLUME=1000000
MIN_PRICE=15.0
MAX_PRICE=200.0
MIN_MARKET_CAP=1000000000

# =============================================================================
# API SETTINGS
# =============================================================================
API_RATE_LIMIT_DELAY=0.2